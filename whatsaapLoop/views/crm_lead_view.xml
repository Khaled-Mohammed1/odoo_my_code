<odoo>
    <data>
        <record id="view_crm_form_inherit" model="ir.ui.view">
            <field name="name">crm.lead.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_show_potential_duplicates']" position="after">
                    <button name="whatsAppLoop" type="object" class="oe_stat_button" icon="fa-whatsapp"
                            onclick="window.open('https://wa.me/+201128716300', '_blank');">
                        <div class="o_stat_info">
                            <span class="o_stat_text">
                                <h3>WhatsApp</h3>
                            </span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
